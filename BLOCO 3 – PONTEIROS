QUESTÃO 11
#include <iostream>
using namespace std;

int main() {
    int valor = 42;         
    int *ponteiro = &valor;

    cout << "Valor da variável: " << valor << endl;
    cout << "Endereço de memória (ponteiro): " << ponteiro << endl;

    return 0;
}

QUESTÃO 12
#include <iostream>
using namespace std;

void dobrar(int *ptr) {
    if (ptr != nullptr) {
        *ptr = (*ptr) * 2;
    }
}

int main() {
    int numero;
    cout << "Digite um número inteiro: ";
    cin >> numero;
    dobrar(&numero);
    cout << "O valor dobrado é: " << numero << endl;

    return 0;
}
QUESTÃO 13
#include <iostream>
using namespace std;

void trocar(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

int main() {
    int x, y;
    cout << "Digite o valor de x: ";
    cin >> x;
    cout << "Digite o valor de y: ";
    cin >> y;

    cout << "\nAntes da troca: x = " << x << ", y = " << y << endl;

    trocar(&x, &y);

    cout << "Depois da troca: x = " << x << ", y = " << y << endl;

    return 0;
}
QUESTÃO 14
#include <iostream>
using namespace std;

void exibirVetor(int *vetor, int tamanho) {
    cout << "Elementos do vetor: ";
    for (int i = 0; i < tamanho; i++) {
        cout << vetor[i] << " ";
    }
    cout << endl;
}

int main() {
    const int TAM = 5;
    int vetor[TAM];

    cout << "Digite 5 valores inteiros para o vetor:" << endl;
    for (int i = 0; i < TAM; i++) {
        cin >> vetor[i];
    }

    exibirVetor(vetor, TAM);

    return 0;
}
QUESTÃO 15

#include <iostream>
using namespace std;

void verificarAprovacao(int *nota) {
    if (*nota >= 7) {
        cout << "Aluno aprovado." << endl;
    } else {
        cout << "Aluno reprovado." << endl;
    }
}

int main() {
    int nota;
    cout << "Digite a nota do aluno (0 a 10): ";
    cin >> nota;

    verificarAprovacao(&nota);

    return 0;
}
