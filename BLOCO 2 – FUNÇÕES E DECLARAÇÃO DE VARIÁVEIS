    mostrarMensagem();
    return 0;
}
QUESTÃO 9

#include <iostream>
using namespace std;

int quadrado(int num) {
    return num * num;
}

int main() {
    int valor;
    cout << "Digite um número inteiro: ";
    cin >> valor;

    int resultado = quadrado(valor);
    cout << "O quadrado de " << valor << " é: " << resultado << endl;

    return 0;
}

QUESTÃO 10
#include <iostream>
using namespace std;

float maior(float a, float b) {
    return (a > b) ? a : b;
}

int main() {
    float num1, num2;
    cout << "Digite o primeiro número: ";
    cin >> num1;
    cout << "Digite o segundo número: ";
    cin >> num2;

    float maximo = maior(num1, num2);
    cout << "O maior número entre " << num1 << " e " << num2 << " é: " << maximo << endl;

    return 0;
}
