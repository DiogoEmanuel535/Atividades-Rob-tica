QUESTÃO 6

#include <iostream>
using namespace std;

int soma(int a, int b) {
    return a + b;
}

int main() {
    int x, y;
    cout << "Digite o primeiro numero inteiro: ";
    cin >> x;
    cout << "Digite o segundo numero inteiro: ";
    cin >> y;

    int resultado = soma(x, y);
    cout << "A soma de " << x << " e " << y << " é: " << resultado << endl;

    return 0;#include <iostream>
using namespace std;
}

QUESTÃO 7
#include <iostream>
using namespace std;

bool ehPar(int numero) {
    return (numero % 2 == 0);
}

int main() {
    int n;
    cout << "Digite um numero inteiro: ";
    cin >> n;

    if (ehPar(n)) {
        cout << n << " e par." << endl;
    } else {
        cout << n << " e impar." << endl;
    }

    return 0;
}
