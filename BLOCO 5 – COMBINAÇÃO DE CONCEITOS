QUESTÃO 24
#include <iostream>
using namespace std;
double calcularMedia(int *vetor, int tamanho) {
    int soma = 0;
    for (int i = 0; i < tamanho; i++) {
        soma += vetor[i];
    }
    return static_cast<double>(soma) / tamanho;
}

int main() {
    const int TAM = 10;
    int vetor[TAM];
    cout << "Digite 10 números inteiros para o vetor:" << endl;
    for (int i = 0; i < TAM; i++) {
        cin >> vetor[i];
    }
    double media = calcularMedia(vetor, TAM);
    cout << "A média dos valores do vetor é: " << media << endl;

    return 0;
}
QUESTÃO 25
#include <iostream>
using namespace std;
void inverterSinal(int &valor) {
    valor = -valor;
}
int main() {
    int numero;
    cout << "Digite um número inteiro: ";
    cin >> numero;
    inverterSinal(numero);
    cout << "O valor com sinal invertido é: " << numero << endl;

    return 0;
}
