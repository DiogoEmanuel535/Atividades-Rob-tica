#include <iostream>
using namespace std;

int main() {
    const double PI = 3.14;
    double raio;

    cout << "Digite o valor do raio do círculo: ";
    cin >> raio;
    double area = PI * (raio * raio);
    cout << "A área do círculo de raio " << raio << " é: " << area << endl;

    return 0;
}
